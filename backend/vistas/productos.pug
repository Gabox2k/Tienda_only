extends layout

block content
  h2 Productos
  a.btn(href="/productos/nuevo") ➕ Nuevo Producto

  if producto.length === 0
    p No hay productos cargados
  else
    ul
      each p in producto
        li
          | #{p.nombre} - $#{p.precio}
          a.delete(href=`/productos/delete/${p._id}`) ❌
